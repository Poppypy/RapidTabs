{
  "manifest_version": 3,
  "name": "RapidTabs 鼠标手势（右键拖动）",
  "version": "0.2.0",
  "description": "按住鼠标右键拖动执行浏览器操作：滑动导航，L形手势控制标签页，支持自定义手势映射。",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    }
  },
  "permissions": ["tabs", "sessions", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
